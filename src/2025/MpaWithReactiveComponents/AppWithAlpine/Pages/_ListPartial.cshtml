@model List<TodoItem>

<ul class="space-y-2">
    @foreach (var item in Model)
    {
        <li class="flex items-center justify-between border p-2">
            <div class="flex items-center gap-2">
                <input type="checkbox"
                       hx-post="?handler=Toggle"
                       hx-vals='{"id": "@item.Id"}'
                       hx-target="#todo-list"
                       hx-swap="outerHTML"
                       @(item.IsDone ? "checked" : "") />
                <span class="@(item.IsDone ? "line-through text-gray-500" : "")">
                    @item.Text
                </span>
            </div>
            <button hx-post="?handler=Delete"
                    hx-vals='{"id": "@item.Id"}'
                    hx-target="#todo-list"
                    hx-swap="outerHTML"
                    class="text-red-500 hover:underline">
                Delete
            </button>
        </li>
    }
</ul>